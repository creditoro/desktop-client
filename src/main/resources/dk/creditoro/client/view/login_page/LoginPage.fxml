<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="616.0"
      prefWidth="1155.0" stylesheets="@LoginPage.css" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.creditoro.client.view.login_page.LoginController">
    <children>
        <VBox prefHeight="200.0" prefWidth="100.0"/>
        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="226.0" styleClass="login-form">
            <children>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <TextField fx:id="txtUsername" prefHeight="40.0" prefWidth="160.0" promptText="Username"
                                   styleClass="login-form-inputfield">
                            <padding>
                                <Insets left="10.0" right="10.0"/>
                            </padding>
                            <font>
                                <Font size="36.0"/>
                            </font>
                            <VBox.margin>
                                <Insets bottom="5.0" left="20.0" right="20.0" top="5.0"/>
                            </VBox.margin>
                        </TextField>
                        <TextField fx:id="txtPassword" prefHeight="40.0" prefWidth="160.0" promptText="Password"
                                   styleClass="login-form-inputfield">
                            <VBox.margin>
                                <Insets bottom="5.0" left="20.0" right="20.0" top="5.0"/>
                            </VBox.margin>
                            <padding>
                                <Insets left="10.0" right="10.0"/>
                            </padding>
                            <font>
                                <Font size="36.0"/>
                            </font>
                        </TextField>
                        <Label styleClass="login-form-text" text="Glemt din kode? Klik her"/>
                        <Button fx:id="btnSignIn" graphicTextGap="0.0" mnemonicParsing="false"
                                onAction="#onSignInButton"
                                prefHeight="40.0" prefWidth="186.0" styleClass="login-form-button" text="SIGN IN"
                                textFill="WHITE">
                            <font>
                                <Font size="29.0"/>
                            </font>
                            <VBox.margin>
                                <Insets bottom="5.0" left="20.0" right="20.0" top="5.0"/>
                            </VBox.margin>
                            <padding>
                                <Insets bottom="-50.0" top="-50.0"/>
                            </padding>
                        </Button>
                        <Label styleClass="login-form-text" text="Har du ikke en bruger endnu? Tryk her"/>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</HBox>
